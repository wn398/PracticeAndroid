<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">
    <Button
        android:id="@+id/getWithHttpUrlConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="getWithHttpUrlConnection"/>
    <Button
        android:id="@+id/getWithHttpClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="getWithHttpClient"/>
    <Button
        android:id="@+id/parserXMLBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="parser from XML"/>
    <Button
        android:id="@+id/parserJSONBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="parser From JSON"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/contentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="context"/>
    </ScrollView>

</LinearLayout>
