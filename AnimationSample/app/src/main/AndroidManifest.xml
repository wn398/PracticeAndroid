<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wang.tim.animationsample" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TweenCodeActivity"
            android:label="@string/title_activity_tween_code" >
        </activity>
        <activity
            android:name=".TweenXMLActivity"
            android:label="@string/title_activity_tween_xml" >
        </activity>
        <activity
            android:name=".FrameAnimationActivity"
            android:label="@string/title_activity_frame_animation" >
        </activity>
        <activity
            android:name=".PropertyAnimationActivity"
            android:label="@string/title_activity_property_animation" >
        </activity>
        <activity
            android:name=".LayoutAnimationActivity"
            android:label="@string/title_activity_layout_animation" >
        </activity>
    </application>

</manifest>
